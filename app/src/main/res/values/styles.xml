<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="txtView_Login">
        <item name="android:textSize">@dimen/font_size_login</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtView_Mobile_Detail">
        <item name="android:textSize">@dimen/font_size_login</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtView_Welcome">
        <item name="android:textSize">@dimen/font_size_welcome</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="buttonStyle">
        <item name="android:backgroundTint">#009688</item>
        <item name="android:width">150dp</item>
    </style>

    <style name="fontRobotoStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="welcomeMsgTitleStyle" parent="fontRobotoStyle" >
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="msgStyle" parent="fontRobotoStyle">
        <item name="android:textAlignment">center</item>
    </style>

</resources>

